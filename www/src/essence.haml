%html(manifest="essence.mf?os_authType=basic")
	%head
		%title Essence
		%meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
		-# %meta(name="apple-mobile-web-app-capable" content="yes")
		%meta(name="apple-mobile-web-app-status-bar-style" content="black")
		%link(rel="stylesheet" href="essence.css" media="all" type="text/css")
		-# %link(rel="apple-touch-icon" href="touch-icon-iphone.png")
		-# %link(rel="apple-touch-startup-image" href="startup.png")
	%body
		#main
			.message
				#message
				%noscript Essence requires JavaScript. Please enable it and refresh this page. 
			%section.panel#index.hidden
				.toolbar
					%a(name="")
					%h2 Essence of Confluence
				%ul.menu
					%li<
						%h2<
							%a.item(href="#favourite" id="favourite") Favourites
				%h3.separator About
				.content
					%p Essence is a skim skin for Confluence, specially designed for mobile devices.
					%p This initial version keeps an offline copy of all your favourite pages and displays with limited wiki syntax support. 

			%section.panel#folder.hidden
				.toolbar
					.left<
						%a.button(href="#") Back
					.right<
						%a.button(href="#refresh") Refresh
					%h2 Favourites
				%ul.menu#favourite-list
					%li.loading Loading...

			%section.panel#document.hidden
			
			.footer<
				= @footer


		%script(type="text/template" id="favourite-item-template")
			="<a href='#document/<%= id %>' class='item <% if (isCached) print('cached'); %>'><%= title %></a>"

		%script(type="text/template" id="loading-template")
			.toolbar
				.left<
					%a.button(href="#favourite") Back
				%h2.loading Loading...
		%script(type="text/template" id="document-template")
			.toolbar
				.left<
					%a.button(href="#favourite") Back
				%h2 <%= title %>
			.content#wiki
		%script(src="zepto.js")
		%script(src="underscore.js")
		%script(src="backbone.js")
		%script(src="essence.js")
